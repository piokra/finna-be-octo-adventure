<Window x:Class="WhiteboardClient.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="300" Width="300">
    <Grid>
        <Button Name="ServerButton" Content="Create Server" HorizontalAlignment="Stretch" Margin="10,40,10,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.042,0.773" Click="Button_Click"/>
        <Button Name="ConnectButton" Content="Connect to a Server" HorizontalAlignment="Stretch" Margin="10,120,10,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.042,0.773" Click="ConnectButton_Click"/>
        <TextBox Name="HostnameBox" Text="Hostname" HorizontalAlignment="Stretch" Margin="10,160,10,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.042,0.773"/>
        <TextBox Name="PortConnect" Text="Port" HorizontalAlignment="Stretch" Margin="10,200,10,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.042,0.773"/>
        <TextBox Name="PortServer" Text="Port" HorizontalAlignment="Stretch" Margin="10,80,10,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.042,0.773"/>


    </Grid>
</Window>
